doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Dashboard
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/modern-normalize/1.1.0/modern-normalize.min.css")
        link(rel="stylesheet" href="./css/main.css")
    body 
        aside.sidemenu
            .sidemenu__title-wrap
                svg.sidemenu__icon
                    use(href="./assets/icons.svg#icon-setting")
                div.title__flex-wrap
                    h1.sidemenu__title Dashboard 
                    p.sidemenu__ver v.01
            include includes/nav-bar
            include includes/user

            
        main
            .content
                header
                    p.greeting Hello Evano,&#128075;&#127996;
                section 
                    .customers
                        .customers__head
                            .customers__title-wrap
                                h2.customers__title All Customers
                                p.customers__subtitle Active Members
                            .customers__searchbar-wrap
                                input(type="text" placeholder="search").customers__searchbar
                                svg.customers__searchbar-icon
                                    use(href='./assets/icons.svg#icon-search')
                        include includes/customers-list